<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             x:Class="Marathon.MainPage">

    <StackLayout Padding="20,20">
        <Label Text="Race Results" FontSize="Large" FontAttributes="Bold"></Label>
        <ListView x:Name="lstResults"></ListView>
        <Picker x:Name="RacePicker" Title="Please Pick a Race" ItemDisplayBinding="{Binding race_name}" HorizontalTextAlignment="Center" BackgroundColor="Silver" SelectedIndexChanged="RacePicker_OnSelectedIndexChanged"/>

       
    </StackLayout>

</ContentPage>
